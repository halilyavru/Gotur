<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_flow_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_chip"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:padding="6dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_item_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="chip"
        android:textSize="13sp"
        android:textColor="@color/gri700"
        android:layout_marginLeft="3dp"/>

    <ImageView
        android:id="@+id/iv_chip_delete"
        android:layout_width="@dimen/remove_icon_dimen"
        android:layout_height="@dimen/remove_icon_dimen"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_item_chip"
        android:src="@drawable/ic_cancel_black_18dp"
        android:tint="#A6A6A6"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"/>

</RelativeLayout>