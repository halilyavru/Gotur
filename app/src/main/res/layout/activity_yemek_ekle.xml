<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Başlık -->
    <TextView
        android:id="@+id/tv_get_portfoy_bilgi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/urun_bilgileri"
        android:textColor="@color/gri700"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@color/baslik_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_yemek_resim">

            <android.support.v7.widget.CardView
                android:id="@+id/img_btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:contentPadding="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

                <android.support.v7.widget.AppCompatButton
                    android:background="@android:color/transparent"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:id="@+id/btn_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resim_ekle"
                    android:drawableTop="@drawable/ic_add_circle_black_48dp"
                    android:drawableTint="@color/mavigri500"
                    android:textColor="@color/mavigri500"
                    android:clickable="false"
                    android:drawablePadding="3dp"/>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/iv_yemek_resim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"/>


        </RelativeLayout>

        <!-- Yemek Adi -->

        <LinearLayout
            android:id="@+id/ll_yemek_adi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_toRightOf="@+id/rl_yemek_resim"
            android:layout_toEndOf="@+id/rl_yemek_resim">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yemek_adi"
                    android:textColor="@color/gri900"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_yemek_adi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seciniz"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableTint="@android:color/tab_indicator_text"/>

        </LinearLayout>

        <!-- Fiyat -->

        <LinearLayout
            android:id="@+id/ll_fiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingRight="6dp"
            android:layout_toRightOf="@+id/rl_yemek_resim"
            android:layout_below="@+id/ll_yemek_adi">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fiyat"
                    android:textColor="@color/gri900"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_fiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/giriniz"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:drawableRight="@drawable/ic_keyboard_hide_black_24dp"
                android:drawableTint="@android:color/tab_indicator_text"/>

        </LinearLayout>


    </RelativeLayout>








    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
